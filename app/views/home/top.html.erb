<div class="top-main">
  <div class="top-massage">
    <h2>アイディアをかたちに</h2>
    <p>いまのきもちをつぶやいてみよう</p>
  </div>
</div>
<div class="category-list">
  <ul>
    <li><%= link_to 'トップ', root_path %></li>
    <li><%= link_to '社会にいいこと', root_path(options: {:category => '10'}) %></li>
    <li><%= link_to 'ものづくり', root_path(options: {:category =>'20'}) %></li>
    <li><%= link_to '生活', root_path(options: {:category =>'30'}) %></li>
  </ul>
</div>
<div class="newest">
  <h2><%= link_to '新着', root_path %></h2>
  <h3><%= link_to 'もっと見る', root_path(options: {:allViews => true})%></h3>
  <h3><%= link_to 'いいね順', root_path(options: {:likes => true}) %><h3>
</div>
<div class="main-posts-index">
  <div class="container uk-flex uk-flex-around uk-flex-wrap-between uk-flex-wrap">
    <% @posts.each do |post| %>
    <div class="uk-flex">
      <div class="card uk-card uk-card-small uk-card-default">
        <% if post.image.attached? %>
        <div class="card-img">
          <div class="uk-card-media-top uk-text-center">
            <%= image_tag url_for(post.image)%>
          </div>
        </div>
      <% end %>
      <div class="card-content">
        <div class="card-title">
          <%= link_to(post.title, "/posts/#{post.id}") %>
        </div>
        <div class="card-text">
          <%= post.content %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
