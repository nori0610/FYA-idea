<div class="top-main">
  <div class="top-massage">
    <h2>アイディアをかたちに</h2>
    <p>いまのきもちをつぶやいてみよう</p>
  </div>
</div>
<div class="category-list">
  <ul>
    <li><a href="#">トップ</a></li>
    <li><a href="#">社会にいいこと</a></li>
    <li><a href="#">ものづくり</a></li>
    <li><a href="#">生活</a></li>
  </ul>
</div>
<div class="newest">
  <h2><%= link_to '新着', root_path %></h2>
  <h3><%= link_to 'もっと見る', root_path(options: {:allViews => true})%></h3>
  <h3><%= link_to 'いいね順', root_path(options: {:likes => true}) %><h3>
</div>
<div class="main-posts-index">
  <div class="container uk-flex uk-flex-around uk-flex-wrap-between uk-flex-wrap">
    <% @posts.each do |post| %>
    <div class="uk-flex">
      <div class="card uk-card uk-card-small uk-card-default">
        <% if post.image.attached? %>
        <div class="card-img">
          <div class="uk-card-media-top uk-text-center">
            <%= image_tag url_for(post.image)%>
          </div>
        </div>
      <% end %>
      <div class="card-content">
        <div class="card-title">
          <%= link_to(post.title, "/posts/#{post.id}") %>
        </div>
        <div class="card-text">
          <%= post.content %>
        </div>
      </div>
      <% if post.category.present? %>
        <div class="card-link">
          <%= t("post.categories.#{post.category}") %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
